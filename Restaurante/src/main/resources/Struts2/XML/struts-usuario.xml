<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="usuario" extends="json" namespace="/usuario">
        <action name="editar" method="editar" class="Acciones.UsuarioAction"/>
        <action name="registrar" method="registrar" class="Acciones.UsuarioAction"/>            
        <action name="modificar" method="modificar" class="Acciones.UsuarioAction"/>
        <action name="eliminar" method="eliminar" class="Acciones.UsuarioAction"/>
        <action name="recuperar" method="recuperar" class="Acciones.UsuarioAction"/>
        <action name="listar" method="listar" class="Acciones.UsuarioAction">
            <result name="success" type="tiles">/usuario/todos.tiles</result>
        </action>
        <action name="nuevo" method="nuevo" class="Acciones.UsuarioAction">
            <result name="success" type="tiles">/usuario/altamodificacion.tiles</result>
        </action>
        <action name="misdatos" method="misdatos" class="Acciones.UsuarioAction">
            <result name="success" type="tiles">/usuario/misdatos.tiles</result>
        </action>
        <action name="modificarmisdatos" method="modificarmisdatos" class="Acciones.UsuarioAction"/>
        <action name="primerLogin" method="primerLogin" class="Acciones.UsuarioAction"/>        
        <action name="obtenerPregunta" method="obtenerPregunta" class="Acciones.UsuarioAction">
            <result name="success">/WEB-INF/usuario/recuperarClave.jsp</result>
            <result name="input">/WEB-INF/usuario/recuperar.jsp</result>
        </action>
        <action name="recuperarClave" method="recuperarClave" class="Acciones.UsuarioAction"/>
    </package>
</struts>